@model _03_ToDoListTask.ViewModels.TaskViewModel

@{
    ViewData["Title"] = (Model.Id > 0 ? "Edit" : "Insert");
}

    <h1>@(Model.Id > 0 ? "Edit" : "Insert")</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@(Model.Id > 0 ? "Edit" : "Insert")">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@(Model.Id > 0 ? "Edit" : "Add")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
